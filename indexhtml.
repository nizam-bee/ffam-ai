    const auth = firebase.auth();

    function signIn() {
      const provider = new firebase.auth.GoogleAuthProvider();
      auth.signInWithPopup(provider).then(result => {
        const user = result.user;
        document.getElementById('authSection').style.display = 'none';
        document.getElementById('userEmail').textContent = `Signed in as: ${user.email}`;
        document.getElementById('userInfo').classList.remove('hidden');
        document.getElementById('builder').classList.remove('hidden');
      });
    }

    function signOut() {
      auth.signOut().then(() => {
        location.reload();
      });
    }

    let isPremium = false;

    function selectPlatform(platform) {
      document.getElementById('platformSection').style.display = 'block';
    }

    function generateApp() {
      const idea = document.getElementById('ideaInput').value;
      document.getElementById('generatedApp').style.display = 'block';
      document.getElementById('generatedTitle').textContent = idea || "My Custom App";
      document.getElementById('generatedDesc').textContent = `AI has created your app: ${idea}`;
    }

